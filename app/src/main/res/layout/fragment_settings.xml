        app:layout_constraintBottom_toBottomOf="@id/option_icon"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@id/option_icon"
        android:textSize="16sp"
        android:textColor="@color/customRed"
