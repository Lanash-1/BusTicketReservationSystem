<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.user.UserDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profile_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        android:src="@drawable/baseline_people_24"
        app:strokeWidth="5dp"
        android:padding="16dp"
        app:strokeColor="@color/customRed"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userId_textView"
        android:text="ID : # 01"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/TitleTextStyle"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/upcoming_cardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userId_textView"
        app:layout_constraintRight_toLeftOf="@id/completed_cardView"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/upcoming_layout">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upcoming_count_textView"
                android:text="00"
                style="@style/AnalyticsCardTitleStyle"
                android:textSize="20sp"
                android:layout_margin="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upcoming_title_textView"
                android:text="Upcoming Trips"
                style="@style/TextDefault"
                android:textColor="#e7b416"
                app:layout_constraintTop_toBottomOf="@id/upcoming_count_textView"
                app:layout_constraintLeft_toLeftOf="@id/upcoming_count_textView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/completed_cardView"
        app:layout_constraintTop_toTopOf="@id/upcoming_cardView"
        app:layout_constraintBottom_toBottomOf="@id/upcoming_cardView"
        app:layout_constraintLeft_toRightOf="@id/upcoming_cardView"
        app:layout_constraintRight_toLeftOf="@id/cancelled_cardView"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/completed_layout">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/completed_count_textView"
                android:text="00"
                style="@style/AnalyticsCardTitleStyle"
                android:layout_margin="8dp"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/completed_title_textView"
                android:text="Completed Trips"
                style="@style/TextDefault"
                android:textColor="#2dc937"
                app:layout_constraintTop_toBottomOf="@id/completed_count_textView"
                app:layout_constraintLeft_toLeftOf="@id/completed_count_textView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancelled_cardView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/upcoming_cardView"
            app:layout_constraintBottom_toBottomOf="@id/upcoming_cardView"
            app:layout_constraintLeft_toRightOf="@id/completed_cardView"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cancelled_layout">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cancelled_count_textView"
                    android:text="00"
                    android:textSize="20sp"
                    style="@style/AnalyticsCardTitleStyle"
                    android:layout_margin="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cancelled_title_textView"
                    android:text="Cancelled Trips"
                    style="@style/TextDefault"
                    android:textColor="#cc3232"
                    app:layout_constraintTop_toBottomOf="@id/cancelled_count_textView"
                    app:layout_constraintLeft_toLeftOf="@id/cancelled_count_textView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_details_cardView"
            app:layout_constraintTop_toBottomOf="@id/upcoming_cardView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="10dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_details_layout"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/about_textView"
                    android:text="About"
                    style="@style/TitleTextStyle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username_title_textView"
                    android:text="Username"
                    style="@style/TextColor"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/about_textView"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/about_textView"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username_input_textView"
                    android:text="Lanash D"
                    app:layout_constraintTop_toBottomOf="@id/username_title_textView"
                    app:layout_constraintStart_toStartOf="@id/username_title_textView"
                    style="@style/TitleTextStyle"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gender_title_textView"
                    android:text="Gender"
                    style="@style/TextColor"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/username_input_textView"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/about_textView"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gender_input_textView"
                    android:text="Male"
                    app:layout_constraintTop_toBottomOf="@id/gender_title_textView"
                    app:layout_constraintStart_toStartOf="@id/about_textView"
                    style="@style/TitleTextStyle"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dob_title_textView"
                    android:text="Date of birth"
                    style="@style/TextColor"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/gender_input_textView"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/about_textView"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dob_input_textView"
                    android:text="08-09-2001"
                    app:layout_constraintTop_toBottomOf="@id/dob_title_textView"
                    app:layout_constraintStart_toStartOf="@id/about_textView"
                    style="@style/TitleTextStyle"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mail_title_textView"
                    android:text="Mail ID"
                    style="@style/TextColor"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/dob_input_textView"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/about_textView"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mail_input_textView"
                    android:text="lanash@zoho.com"
                    app:layout_constraintTop_toBottomOf="@id/mail_title_textView"
                    app:layout_constraintStart_toStartOf="@id/about_textView"
                    style="@style/TitleTextStyle"
                    android:layout_marginTop="4dp"
                    android:autoLink="email"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobile_title_textView"
                    android:text="Mobile Number"
                    style="@style/TextColor"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/mail_input_textView"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/about_textView"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobile_input_textView"
                    android:text="9876543210"
                    app:layout_constraintTop_toBottomOf="@id/mobile_title_textView"
                    app:layout_constraintStart_toStartOf="@id/about_textView"
                    style="@style/TitleTextStyle"
                    android:layout_marginTop="4dp"
                    android:autoLink="phone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    android:textIsSelectable="true"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>