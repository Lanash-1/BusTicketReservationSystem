<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.analytics.AnalyticsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/partners_card"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/buses_card"
            android:layout_margin="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/partner_count_textView"
                android:text="00"
                style="@style/AnalyticsCardTitleStyle"
                android:layout_margin="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/partner_count_title_textView"
                android:text="Partners Registered"
                style="@style/TextDefault"
                android:layout_gravity="bottom"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/buses_card"
            app:layout_constraintLeft_toRightOf="@id/partners_card"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/partners_card"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bus_count_textView"
                android:text="00"
                style="@style/AnalyticsCardTitleStyle"
                android:layout_margin="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bus_count_title_textView"
                android:text="Bused Operated"
                style="@style/TextDefault"
                android:layout_gravity="bottom"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/tickets_card"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/partners_card"
            app:layout_constraintRight_toLeftOf="@id/users_card"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tickets_count_textView"
                android:text="00"
                style="@style/AnalyticsCardTitleStyle"
                android:layout_margin="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tickets_count_title_textView"
                android:text="Tickets Booked"
                style="@style/TextDefault"
                android:layout_gravity="bottom"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/users_card"
            app:layout_constraintLeft_toRightOf="@id/tickets_card"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tickets_card"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_count_textView"
                android:text="00"
                style="@style/AnalyticsCardTitleStyle"
                android:layout_margin="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_count_title_textView"
                android:text="Registered Users"
                style="@style/TextDefault"
                android:layout_gravity="bottom"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                />


        </androidx.cardview.widget.CardView>
        
        
    </androidx.constraintlayout.widget.ConstraintLayout>
    

</ScrollView>