<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.welcome.WelcomeFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/welcomePage_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dotIndicator_layout"
        android:layout_marginBottom="16dp"
        android:layout_centerInParent="true"
        >

    </androidx.viewpager2.widget.ViewPager2>

    <LinearLayout
        android:id="@+id/dotIndicator_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomePage_viewPager"
        app:layout_constraintBottom_toTopOf="@id/continue_as_text"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dot1"
                android:src="@color/black"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dot2"
                android:src="#808080"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dot3"
                android:src="#808080"
                />


        </androidx.cardview.widget.CardView>



    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/continue_as_text"
        android:text="Continue as"
        style="@style/TextDefault"
        app:layout_constraintLeft_toLeftOf="@id/admin"
        app:layout_constraintRight_toRightOf="@id/user"
        app:layout_constraintBottom_toTopOf="@id/admin"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin"
        android:text="Admin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/user"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        app:layout_constraintTop_toTopOf="@id/admin"
        app:layout_constraintBottom_toBottomOf="@id/admin"
        app:layout_constraintLeft_toRightOf="@id/admin"
        app:layout_constraintRight_toLeftOf="@id/user"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user"
        android:text="user"
        app:layout_constraintBottom_toBottomOf="@id/admin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/admin"/>



</androidx.constraintlayout.widget.ConstraintLayout>