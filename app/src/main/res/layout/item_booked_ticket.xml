<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:selectableItemBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/source_location_text"
        android:text="Chennai"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TitleTextStyle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dash"
        android:text=" - "
        app:layout_constraintLeft_toRightOf="@id/source_location_text"
        app:layout_constraintTop_toTopOf="@id/source_location_text"
        style="@style/TitleTextStyle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/destination_location_text"
        android:text="Bangalore"
        app:layout_constraintLeft_toRightOf="@id/dash"
        app:layout_constraintTop_toTopOf="@id/source_location_text"
        style="@style/TitleTextStyle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_text"
        android:text="â‚¹ 2700"
        app:layout_constraintTop_toTopOf="@id/source_location_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        style="@style/TitleTextStyle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_time_text"
        android:text="21:15"
        app:layout_constraintStart_toStartOf="@id/source_location_text"
        app:layout_constraintTop_toBottomOf="@id/source_location_text"
        android:layout_marginTop="8dp"
        style="@style/TextDefault"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dash2"
        android:text=" - "
        app:layout_constraintLeft_toRightOf="@id/start_time_text"
        app:layout_constraintTop_toTopOf="@id/start_time_text"
        style="@style/TextDefault"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reach_time_text"
        android:text="22:45"
        app:layout_constraintTop_toTopOf="@id/start_time_text"
        app:layout_constraintStart_toEndOf="@id/dash2"
        style="@style/TextDefault"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/travels_text"
        android:text="KGF Tours and Travels"
        app:layout_constraintStart_toStartOf="@id/source_location_text"
        app:layout_constraintTop_toBottomOf="@id/start_time_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        style="@style/TextDefault"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_date_text"
        android:text="Nov 12"
        style="@style/TextDefault"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_text"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/year_text"
        android:text="2022"
        app:layout_constraintTop_toBottomOf="@id/date_date_text"
        app:layout_constraintStart_toStartOf="@id/date_date_text"
        app:layout_constraintEnd_toEndOf="@id/date_date_text"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/travels_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>