<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BusTicketReservationSystem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">#D0191D</item>-->
        <item name="colorPrimary">@color/customRed</item>
        <item name="colorPrimaryVariant">@color/customRed</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/customRed</item>
        <item name="colorSecondaryVariant">@color/customRed</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorControlActivated">@color/customBlue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextDefault">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

<!--    <style name="DetailsEditText">-->
<!--        <item name="android:foreground">#414141</item>-->
<!--    </style>-->

    <style name="TextLink">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0000FF</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IconTint">
        <item name="tint">@color/black</item>
    </style>

    <style name="LinkTextAppearance">
        <item name="android:textColor">#0000EE</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonIconColor">
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="chipIcon">
        <item name="chipIconTint">@color/black</item>
    </style>

    <style name="DividerColor">
        <item name="dividerColor">#808080</item>
    </style>

    <style name="Image">
        <item name="srcCompat">@drawable/search_icon_red</item>
    </style>

    <style name="PageBackground">
        <item name="android:background">#f0f0f0</item>
    </style>

    <style name="NotFoundTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingText">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
        `<item name="android:textStyle">bold</item>
    </style>


    <style name="DialogFragmentAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AnalyticsCardTitleStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>