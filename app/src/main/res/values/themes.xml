<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BusTicketReservationSystem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">#D0191D</item>-->
        <item name="colorPrimary">@color/seatGreen</item>
        <item name="colorPrimaryVariant">@color/seatGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textCursorDrawable" parent="androidx.appcompat.widget.SearchView">@drawable/white_cursor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/customRed</item>
        <item name="colorSecondaryVariant">@color/customRed</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
